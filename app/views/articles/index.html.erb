<%= render 'header' %>

<div class='article-menu'>
  <% @articles.each do |article| %>
    <div class='article-container'>
      <div><%= link_to article.title, article_path(article), title: "Read article" %></div>
      <div class='article-actions'>
        <div class='action edit'>
          <%= link_to edit_article_path(article), title: "Edit article" do %>
            <i class="fas fa-edit"></i>
          <% end %>
        </div>
        <div class='action delete'>
          <%= link_to article_path(article),
                method: :delete,
                data: { confirm: 'Are you sure?' },
                title: "Delete article" do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="button-container">
  <%= link_to 'New article', new_article_path, class: 'button' %>
</div>
